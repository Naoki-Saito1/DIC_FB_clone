<p id="notice"><%= notice %></p>

<h1 class="alert alert-info">Feeds</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= image_tag feed.image_url, style:'width:100px' %></td>
        <td><%= feed.content %></td>
        <td><%= feed.user.name%></td>
        <td class="padding"><%= link_to 'Show', feed %></td>
        <% if current_user.id == feed.user.id %>
        <td class="padding"><%= link_to 'Edit', edit_feed_path(feed) %></td>
        <td class="padding"><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


